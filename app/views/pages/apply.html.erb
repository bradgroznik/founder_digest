<%= render partial: "shared/heading", locals: {title: 'Apply to Founder Digest', tagline: 'Each application is mannually reviewed by our team within 24 hours'} %>
<% plan_name = params[:plan] || 'free' %>
<div class="max-w-md mx-auto">
  <%= form_for UserSubmission.new do |form| %>
    <div class="space-y-12">
      <input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%= plan_name %>">
      <div>
        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
            <div class="mt-2">
              <%= form.text_field :first_name, placeholder: 'Brad', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-3">
            <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900">Last name</label>
            <div class="mt-2">
              <%= form.text_field :last_name, placeholder: 'Groznik', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
            <div class="mt-2">
              <%= form.text_field :email, type: 'email', placeholder: 'brad@groznikpr.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Company website</label>
            <div class="mt-2">
              <%= form.text_field :website, type: 'url', placeholder: 'https://GroznikPR.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
            </div>
          </div>
        </div>
      </div>
      <div>
        <div class="mt-10 space-y-10">
          <fieldset>
            <legend class="text-sm font-semibold leading-6 text-gray-900">What is your role?</legend>
            <div class="mt-6 space-y-6">
              <div class="flex items-center">
                <input id="user_submission_job_role_csuite" name="user_submission[job_role]" type="radio" value="c-suite" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                <label for="user_submission_job_role_csuite" class="ml-3 block text-sm font-medium text-gray-700">C-Suite</label>
              </div>
              <div class="flex items-center">
                <input id="user_submission_job_role_founder" name="user_submission[job_role]" type="radio" value="founder" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                <label for="user_submission_job_role_founder" class="ml-3 block text-sm font-medium text-gray-700">Founder</label>
              </div>
              <div class="flex items-center">
                <input id="user_submission_job_role_employee" name="user_submission[job_role]" type="radio" value="employee" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
                <label for="user_submission_job_role_employee" class="ml-3 block text-sm font-medium text-gray-700">Employee</label>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
      <div class="col-span-full">
        <label for="text" class="block text-sm font-medium leading-6 text-gray-900">About</label>
        <div class="mt-2">
          <%= form.text_area :text, placeholder: "Stakeholders,&#10;&#10;This month we...".html_safe, rows: 6, class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
        </div>
        <p class="mt-3 text-sm leading-6 text-gray-600">The more detailed, the more likely you'll be accepted.</p>
      </div>
    </div>
    <div class="mt-6 flex items-center justify-end gap-x-6">
      <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent bg-brand-blue hover:bg-brand-blue-dark py-2 px-4 text-sm font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Apply</button>
    </div>
  <% end %>
</div>
